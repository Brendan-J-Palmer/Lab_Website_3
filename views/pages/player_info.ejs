<% include ../partials/header %>
<% include ../partials/menu %>
<div class="container">
	<br>
	<div class="row">
		<div class="col-4">
			<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				<% if(player){
					var image_src = player.img_src;
				}
				else{
					var image_src = '../resources/img/helmet.jpg';
				}

				%>
				<img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				<div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							<option selected> Select Player </option>
							<%if (playerdata){
							var playerrows = "";
							for (var i = 0; i<playerdata.length; i++){
							playerrows += '<option value = ' + playerdata[i].id + '>' + playerdata[i].name + '</option>';
						}
					}
					%>
					<%- playerrows %>
				</select>
				<div class="col-8">
					<div class="table-responsive">
						<table class="table">
							<tr>
<!-- TODO: Set Player Information
If a player has been selected, fill in their information in each of the fields below.
You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
<th>Year</th>
<td>	<% if(player){%>
			<%-player.year%>
		<%}%>
</td>
</tr>
<tr>
	<th>Major</th>
	<td>	<% if(player){%>
			<%-player.major%>
		<%}%> %></td>
</tr>
<tr>
	<th>Games Played</th>
	<td>	<% if(gamesplayed){%>
			<%-gamesplayed%>
		<%}%></td>
</tr>
<tr>
	<td>Passing Yards: <% if(player){%>
			<%-player.passing_yards%>
		<%}%> %></td>
	<td>Avg. Passing Yards: <% if(player){%>
			<%var avgpass = (player.passing_yards/gamesplayed).toFixed(0)%>
			<%-avgpass%>
		<%}%></td>
</tr>
<tr>
	<td>Rushing Yards: <% if(player){%>
			<%-player.rushing_yards%>
		<%}%></td>
	<td>Avg. Rushing Yards: <% if(player){%>
			<%var avgrush = (player.rushing_yards/gamesplayed).toFixed(0)%>
			<%-avgrush%>
		<%}%></td>
</tr>
<tr>
	<td>Receiving Yards: <% if(player){%>
			<%-player.receiving_yards%>
		<%}%> %></td>
	<td>Avg. Receiving Yards: <% if(player){%>
			<%var avgrec = (player.receiving_yards/gamesplayed).toFixed(0)%>
			<%-avgrec%>
		<%}%></td>
</tr>
</table>
</div>
</div>
</form>
</div>
</div>
</div>

</div>
</div>

<% include ../partials/footer %>